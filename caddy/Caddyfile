stocktree.insd.dev {
    tls {
        dns cloudflare {$CLOUDFLARE_AUTH_TOKEN}
    }

    @api {
        path /api/*
    }
    reverse_proxy @api 172.30.1.3 # 백엔드 서버
    reverse_proxy 172.30.1.2 # 프론트엔드 서버
}

http://stocktree.insd.dev {
    redir https://stocktree.insd.dev{uri}
}

stocktree.insd.dev:8080 {
    tls {
        dns cloudflare {$CLOUDFLARE_AUTH_TOKEN}
    }
    reverse_proxy 172.30.1.4 # 백엔드 테스트 서버
}
